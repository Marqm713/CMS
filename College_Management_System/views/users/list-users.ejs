<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>College Management System - All Users</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Users</h1>
        <div class="mb-3">
            <a class="btn btn-primary" href="/dashboard">Home</a>
            <a class="btn btn-info" href="/users/new">Add New User</a>
        </div>
        <table class="table table-bordered table-striped mt-3">
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>Username</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.user_id %></td>
                        <td><%= user.username %></td>
                        <td><%= user.role %></td>
                        <td>
                            <a class="btn btn-warning btn-sm" href="/users/edit/<%= user.user_id %>">Edit</a>
                            <a class="btn btn-danger btn-sm" href="/users/delete/<%= user.user_id %>">Delete</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
