<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>College Management System - All Courses</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Courses</h1>
        <div class="mb-3">
            <a class="btn btn-primary" href="/dashboard">Home</a>
            <a class="btn btn-info" href="/courses/new">Add New Course</a>
        </div>
        <table class="table table-bordered table-striped mt-3">
            <thead>
                <tr>
                    <th>Course ID</th>
                    <th>Course Name</th>
                    <th>Credits</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% courses.forEach(course => { %>
                    <tr>
                        <td><%= course.course_id %></td>
                        <td><%= course.course_name %></td>
                        <td><%= course.credits %></td>
                        <td>
                            <a class="btn btn-warning btn-sm" href="/courses/edit/<%= course.course_id %>">Edit</a>
                            <a class="btn btn-danger btn-sm" href="/courses/delete/<%= course.course_id %>">Delete</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
